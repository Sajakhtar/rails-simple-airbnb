<div class="row mb-3">
  <div class="col-12">
    <div class="card w-100 shadow-sm">
      <img src="<%= @flat.image_url %>" class="img-fluid rounded" alt="...">
    </div>
  </div>
</div>

<div class="row">
  <div class="d-flex justify-content-around">
    <div class="col-8">
      <div class="bg-white border-light rounded p-3 mr-0 mb-3 shadow-sm">
        <h2>
          <%= @flat.name %>
        </h2>
        <p>
          <%= @flat.address %>
        </p>
        <%= link_to 'Back', flats_path, class: 'btn btn-dark mb-3' %>
        <%= link_to 'Edit flat', edit_flat_path(@flat), class: 'btn btn-primary mb-3' %>
      </div>

      <div class="bg-white border-light rounded p-3 shadow-sm">
        <p>
          <h3>A bit more about this flat ...</h3>
          <%= @flat.description %>
        </p>
      </div>
    </div>

    <div class="col-4">
      <div class="card w-100 p-3 bg-white shadow-sm mb-3">
        <form>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">From</span>
            </div>
            <input type="date" class="form-control" placeholder="from" aria-label="from" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon2">To</span>
            </div>
            <input type="date" class="form-control" placeholder="to" aria-label="to" aria-describedby="basic-addon1">
          </div>
          <button type="submit" class="btn btn-success w-100 text-white">Submit</button>
        </form>
      </div>

      <div class="card w-100 p-3 bg-white shadow-sm mb-3">
        <h4>Details:</h4>
        <div class="d-flex">
          <p class="mr-3">
            <i class="fas fa-user-friends"></i>
            <%= @flat.number_of_guests %>
          </p>
          <p>
            <i class="fas fa-dollar-sign"></i>
            <%= @flat.price_per_night %>
          </p>
        </div>
      </div>

      <div class="card w-100 p-3 bg-white shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
          <h6>Share</h6>
          <div class="h2">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
